@model Blog.Models.Article
@{
    ViewBag.Title = "Блог";
}

<div class="container">
    <div style="background-color:#fbd184">
        <h2>Публикуване на коментари</h2>
        @using (Html.BeginForm("Create", "Article", FormMethod.Post, new { @class = "form-horizontal" }))
        {
            @Html.AntiForgeryToken()
            @Html.ValidationSummary("", new { @class = "text-danger" })

            <div class="form-group">
                @Html.LabelFor(m => m.Title, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.TextBoxFor(m => m.Title, new { @class = "form-control" })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Content, new { @class = "control-label col-sm-4" })
                <div class="col-sm-6">
                    @Html.TextAreaFor(m => m.Content, new { @class = "form-control", @rows = "7" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-sm-5 col-sm-offset-5">
                    @Html.ActionLink("Назад", "Index", "Article", null, new { @class = "btn btn-default" })
                    <input type="submit" value="Публикувай" class="btn btn-success" />
                </div>
            </div>
        }
    </div>
</div>